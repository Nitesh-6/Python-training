class Ingrediants:
    def __init__(self, name, price, quantity_used):
        self.name = name
        self.price = price
        self.quantity_used = quantity_used

    def get_ingriedant_details(self):
        print("The ingrediant details are:", self.name, self.price, self.quantity_used)
    
cheese = Ingrediants("Cheese", "$2 per slice", "4 slices")
cheese.get_ingriedant_details()